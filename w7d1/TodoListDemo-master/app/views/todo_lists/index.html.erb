<div id="content">
</div>

<script type="text/template" id="todo-lists-template">
  <h1>TodoLists</h1>

  <ul>
    <%% _(todoLists).each(function (todoList) { %>
      <li>
        <a href="#" class="todo-list" data-id="<%%= todoList.id %>">
          <%%= todoList.title %>
        </a>
      </li>
    <%% }); %>
  </ul>
</script>

<script type="text/template" id="todo-list-template">
  <h1><%%= todoList.title %></h1>
  
  <ul>
    <%% _(todoList.items).each(function (todoItem) { %>
      <li>
        <%%= todoItem.title %>
      </li>
    <%% }); %>
  </ul>
  
  <form>
    <input
      type="hidden"
      value="<%= form_authenticity_token %>"
      name="authenticity_token">

    <label for="todo_item_title">Title</label>
    <input type="text" name="todo_item[title]" id="todo_item_title">

    <input type="submit">
  </form>
</script>
