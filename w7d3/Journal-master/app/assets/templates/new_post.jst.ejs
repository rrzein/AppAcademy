<div id="errors">
</div>
<form id="new_post_form">
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= App.Store.csrfToken %>">
	<label for="post_title">Title</label>
	<input type="text"
				 id="post_title"
				 name="post[title]"
				 value="<%= post.escape('title') %>">

	<label for="post_body">Body</label>
	<input type="text"
				 id="post_body"
				 name="post[body]"
				 value="<%= post.escape('body') %>">

	<input type="submit" id="newPostButton" value="Create post">
</form>