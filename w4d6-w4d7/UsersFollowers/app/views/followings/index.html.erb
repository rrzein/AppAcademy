<h1>People to follow</h1>
<ol>
<% @all_users.each do |user| %>
<li><%= user.name %></li>
<br>
	<% if @user.followees.include?(user) %>

	<% following = Following.find_by_user_id_and_follower_id(user.id, @user.id) %>
		<%= button_to "Unfollow", user_following_url(@user, following), :following => { :user_id => user.id }, :method => :delete %>

	<% else %>

	<%= button_to "Follow", user_followings_url(@user, :following => { :user_id => user.id }) %>

	<% end %>
	<br>
<% end %>
</ol>