<h1>Create New User</h1>
<br>
<form action="<%= users_url %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
	<label for="user_name">Name</label>
	<input type="text" name="user[name]" id="user_name">
	<label for="user_username">Username</label>
	<input type="text" name="user[username]" id="user_username">
	<label for="user_password">Password</label>
	<input type="password" name="user[password]" id="user_password">

<h3>Create first post</h3>
<br>
<label for="user_posts_attributes_0_body">Post Body</label>
<br>
<input type="text"
				name="user[posts_attributes[0][body]"
				id="user_posts_attributes_0_body">
<br>
Up to 3 links:
<br>
<ul>
<% 3.times do |i| %>
<li>
	<label for="user_posts_attributes_0_links_attributes_<%= i %>_name">Link <%= i %>:</label><br>
<input type="text"
			 name="user[posts_attributes][0][links_attributes][<%= i %>][name]"
			 id="user_posts_attributes_0_links_attributes_<%= i %>_name">
</li>
<% end %>
</ul>
	<input type="submit" value="Create New User and First Post">


</form>